<%- include('layouts/header') %>
<div id="wrapper">
  <%- include('layouts/slider') %>

  <div class="container-fluid mt-4">
    <h1 class="h3 mb-4 text-gray-800">Payments</h1>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table id="paymentsTable" class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Donor</th>
                <th>Campaign</th>
                <th>Amount</th>
                <th>Payment Method</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% payments.forEach((p, i) => { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= p.userName || p.userEmail %></td>
                  <td><%= p.campaignTitle %></td>
                  <td>â‚¹<%= Number(p.amount).toLocaleString() %></td>
                  <td><%= p.method || '-' %></td>
                  <td><%= new Date(p.createdAt).toLocaleString() %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('layouts/footer') %>

<script>
  $(document).ready(function(){
    $('#paymentsTable').DataTable({
      order: [[5, 'desc']]
    });
  });
</script>
